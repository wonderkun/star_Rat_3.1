<Grid xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
	Margin = '0, 0, 0, 0' ClipToBounds='True'>
	<Border Margin = '2, 2, 2, -2' BorderThickness='1' CornerRadius = '3' BorderBrush='{x:Static SystemColors.ControlDarkBrush}'>
		<Border.Background>
			<LinearGradientBrush StartPoint='0,0' EndPoint='0,1'>
				<GradientStop Offset='0.2' Color='Transparent'/>
				<GradientStop Offset='1.3' Color='{x:Static SystemColors.ControlDarkColor}'/>
			</LinearGradientBrush>
		</Border.Background>
	</Border>
	<Border Margin='3, 3, 3, -2' CornerRadius = '2' BorderThickness='1' BorderBrush='#A0FFFFFF'/>
</Grid>
